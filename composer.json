{
    "name":"bright-cloud-studio/zyppy-weighted-search",
    "description":"Allows adding weight to entries in the Search Index, or to keywords, to make them appear closer to the top in search results.",
    "homepage": "http://brightcloudstudio.com/",
    "keywords":["contao", "weighted", "search", "bright", "cloud", "studio"],
    "type":"contao-module",
    "license":"GPL-3.0-or-later",
    "authors":[
        {
            "name":"Bright Cloud Studio",
            "homepage":"https://brightcloudstudio.com"
        }
    ],
    "require":{
        "php": "^8.0",
        "contao/core-bundle": "^4.13"
    },
    "require-dev": {
        "contao/manager-plugin": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Bcs\\": [
                "system/modules/contao_weighted_search/library/Bcs"
            ]
        }
    },
    "extra": {
        "contao": {
            "sources": {
                "system/modules/contao_weighted_search": "system/modules/contao_weighted_search"
            }
        }
    },
    "minimum-stability": "dev"
}
